{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "constants/*": [
        "constants/*",
      ],
      "services/*": [
        "services/*",
      ],
      "utils/*": [
        "utils/*",
      ],
      "assets/*": [
        "../assets/*",
      ],
      "locales/*": [
        "../locales/*",
      ],
      "types/*": [
        "types/*",
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
